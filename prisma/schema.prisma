generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://subscriptionuser:0000@localhost:5432/userdb"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      String   @default("USER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Subscriber {
  id        String   @id @default(cuid())
  playerId  String   @unique
  mobile    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  groups    Group[]  @relation("SubscriberGroups")

  @@map("subscribers")
}

model Group {
  id            String            @id @default(cuid())
  name          String            @unique
  description   String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  notifications NotificationLog[] @relation("GroupNotifications")
  subscribers   Subscriber[]      @relation("SubscriberGroups")

  @@map("groups")
}

model NotificationLog {
  id          String    @id @default(cuid())
  title       String
  message     String
  url         String?
  imageUrl    String?
  status      String    @default("PENDING")
  scheduledAt DateTime?
  sentAt      DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  groups      Group[]   @relation("GroupNotifications")

  @@map("notification_logs")
}
